{% extends "layout.html.twig" %}

{% block content %}
    <div>
        <h3 class="cover-heading">Sign in</h3>
        {{ form_start(form, {'method': 'POST'}) }}
        {{ form_errors(form) }}

        <div class="row form-group {{ form.email.vars.valid ? '' : ' has-error' }}">
            {{ form_label(form.email, null, { 'label_attr' : { 'class' : 'col-2 col-form-label'}}) }}
            <div class="col-8">
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="row form-group {{ form.password.vars.valid ? '' : ' has-error' }}">
            {{ form_label(form.password, null, { 'label_attr' : { 'class' : 'col-2 col-form-label'}}) }}
            <div class="col-8">
                {{ form_widget(form.password) }}
                {{ form_errors(form.password) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </div>

        <a href="{{ path('signup') }}">Register!!</a>

        {{ form_end(form) }}
    </div>
{% endblock %}
