{% extends "layout.html.twig" %}

{% block content %}
    <div>
        <h3 class="cover-heading">Sign up</h3>
        {{ form_start(form, {'method': 'POST'}) }}
        {{ form_errors(form) }}
        <div class="form-group row {{ form.username.vars.valid ? '' : ' has-error' }}">
            {{ form_label(form.username, null, { 'label_attr' : { 'class' : 'col-2 col-form-label'}}) }}
            <div class="col-8">
                {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.username) }}
            </div>
        </div>

        <div class="form-group row {{ form.email.vars.valid ? '' : ' has-error' }}">
            {{ form_label(form.email, null, { 'label_attr' : { 'class' : 'col-2 col-form-label'}}) }}
            <div class="col-8">
                {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="form-group row {{ form.password.vars.valid ? '' : ' has-error' }}">
            {{ form_label(form.password, null, { 'label_attr' : { 'class' : 'col-2 col-form-label'}}) }}
            <div class="col-8">
                {{ form_widget(form.password, { 'attr' : { 'class' : 'form-control'}}) }}
                {{ form_errors(form.password) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Sign up</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
